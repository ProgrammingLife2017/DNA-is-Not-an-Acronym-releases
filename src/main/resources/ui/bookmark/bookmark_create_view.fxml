<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane fx:id="bookmarkCreatePane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dnacronym.hygene.ui.bookmark.BookmarkCreateController">
    <children>
        <TitledPane animated="false" collapsible="false" text="Create Bookmark" AnchorPane.bottomAnchor="0.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <GridPane hgap="10.0" vgap="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="10.0" prefWidth="200.0"/>
                        <ColumnConstraints hgrow="SOMETIMES"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints maxHeight="-Infinity" prefHeight="60.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <children>
                        <Label text="Create bookmark" GridPane.columnSpan="2147483647">
                            <tooltip>
                                <Tooltip text="Create a bookmark for the currently selected node."/>
                            </tooltip>
                        </Label>
                        <Label text="Base Offset" GridPane.rowIndex="1"/>
                        <Label text="Radius" GridPane.rowIndex="2"/>
                        <Label text="Description" GridPane.rowIndex="3"/>
                        <TextField fx:id="baseOffset" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <tooltip>
                                <Tooltip text="Base offset within the node itself"/>
                            </tooltip>
                        </TextField>
                        <TextField fx:id="radius" GridPane.columnIndex="1" GridPane.rowIndex="2">
                            <tooltip>
                                <Tooltip text="Radius of the current bookmark."/>
                            </tooltip>
                        </TextField>
                        <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" GridPane.columnIndex="1"
                                  GridPane.rowIndex="3">
                            <tooltip>
                                <Tooltip text="Description of the current bookmark."/>
                            </tooltip>
                        </TextArea>
                        <Button fx:id="save" mnemonicParsing="false" onAction="#onSaveAction" text="Save"
                                GridPane.columnIndex="1" GridPane.rowIndex="4" GridPane.valignment="TOP">
                            <tooltip>
                                <Tooltip text="Save the bookmark to file."/>
                            </tooltip>
                        </Button>
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</AnchorPane>
