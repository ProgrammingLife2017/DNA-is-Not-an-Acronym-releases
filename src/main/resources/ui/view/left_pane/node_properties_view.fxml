<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane maxHeight="Infinity" maxWidth="Infinity" minHeight="-Infinity" minWidth="-Infinity"
            xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dnacronym.hygene.ui.controller.leftpane.NodePropertiesController">
    <children>
        <ScrollPane layoutX="111.0" layoutY="41.0" maxHeight="1.7976931348623157E308" prefHeight="200.0"
                    prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <AnchorPane>
                    <children>
                        <GridPane hgap="5.0" vgap="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label text="Clicked Node"/>
                                <Label text="Sequence" GridPane.rowIndex="2"/>
                                <Canvas fx:id="neighbourCanvas" height="100.0" width="100.0" GridPane.columnIndex="1"
                                        GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP"/>
                                <Label text="Neighbours" GridPane.rowIndex="3"/>
                                <Label text="Position" GridPane.rowIndex="6"/>
                                <TextField fx:id="sequence" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="2">
                                    <tooltip>
                                        <Tooltip text="Base sequence of this node."/>
                                    </tooltip>
                                </TextField>
                                <TextField fx:id="position" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="6">
                                    <tooltip>
                                        <Tooltip text="Position of the node in the graph"/>
                                    </tooltip>
                                </TextField>
                                <Label text="Left neighbours" GridPane.rowIndex="4"/>
                                <TextField fx:id="leftNeighbours" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="4">
                                    <tooltip>
                                        <Tooltip text="Amount of neighbours on the left side of the node."/>
                                    </tooltip>
                                </TextField>
                                <Label text="Right neighbours" GridPane.rowIndex="5"/>
                                <TextField fx:id="rightNeighbours" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="5">
                                    <tooltip>
                                        <Tooltip text="Amount of neighbours on the right side of the node."/>
                                    </tooltip>
                                </TextField>
                                <Label text="Node id" GridPane.rowIndex="1"/>
                                <TextField fx:id="nodeId" editable="false" GridPane.columnIndex="1"
                                           GridPane.rowIndex="1"/>
                                <Button fx:id="focus" mnemonicParsing="false" text="Focus" GridPane.columnIndex="1"
                                onAction="#onFocus"/>
                            </children>
                        </GridPane>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>
