<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dnacronym.hygene.ui.controller.settings.BasicSettingsViewController">
    <children>
        <GridPane hgap="5.0" vgap="20.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"
                  AnchorPane.topAnchor="20.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="100.0" minWidth="100.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="200.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="0.0" prefWidth="200.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ColorPicker fx:id="edgeColor" editable="true" minWidth="150.0" onAction="#edgeColorDone"
                             prefWidth="150.0" GridPane.columnIndex="2" GridPane.rowIndex="1">
                    <tooltip>
                        <Tooltip text="Set the display color of edges between onscreen nodes."/>
                    </tooltip>
                </ColorPicker>
                <Label text="Color" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Slider fx:id="nodeHeight" blockIncrement="5.0" majorTickUnit="10.0" max="50.0" min="5.0"
                        minWidth="200.0" minorTickCount="5" onMouseReleased="#nodeHeightSliderDone" prefWidth="200.0"
                        showTickLabels="true" showTickMarks="true" snapToTicks="true" GridPane.columnIndex="2">
                    <tooltip>
                        <Tooltip text="Set the display height of the nodes."/>
                    </tooltip>
                </Slider>
                <Label text="Nodes"/>
                <Label text="Edges" GridPane.rowIndex="1"/>
                <Label text="Height" GridPane.columnIndex="1"/>
                <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
                <Label text="Movement" GridPane.rowIndex="3"/>
                <Label text="Panning Sensitivty" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Slider fx:id="panningSensitivity" majorTickUnit="0.003" max="0.01" min="0.001"
                        onMouseReleased="#panningSensitivitySliderDone" showTickLabels="true" showTickMarks="true"
                        snapToTicks="true" GridPane.columnIndex="2" GridPane.rowIndex="3">
                    <tooltip>
                        <Tooltip
                                text="Change the sensitivity of panning. A higher number means faster, but less accurate panning."/>
                    </tooltip>
                </Slider>
                <Label text="Zooming Sensitivity" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                <Slider fx:id="zoomingSensitivity" onMouseReleased="#zoomingSensitivitySliderDone" majorTickUnit="0.01"
                        max="0.1" min="0.05" showTickLabels="true"
                        showTickMarks="true" snapToTicks="true" GridPane.columnIndex="2" GridPane.rowIndex="4">
                    <tooltip>
                        <Tooltip
                                text="Change the sensitivity of zooming. A higher number means faster, but less accurate zooming."/>
                    </tooltip>
                </Slider>
            </children>
        </GridPane>
    </children>
</AnchorPane>
