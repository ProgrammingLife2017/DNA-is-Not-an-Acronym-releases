<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.input.KeyCodeCombination?>
<Menu mnemonicParsing="false" text="View" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.dnacronym.hygene.ui.menu.ViewMenuController">
    <MenuItem fx:id="toggleSequenceVisualizer" onAction="#toggleSequenceVisualizerAction">
        <accelerator>
            <KeyCodeCombination alt="UP" code="E" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
        </accelerator>
    </MenuItem>
    <MenuItem fx:id="openBookmarks" onAction="#openBookmarksAction" text="Open bookmarks">
        <accelerator>
            <KeyCodeCombination alt="UP" code="B" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
        </accelerator>
    </MenuItem>
    <MenuItem fx:id="openGenomePaths" onAction="#openGenomePathsAction" text="Open genome path options">
        <accelerator>
            <KeyCodeCombination alt="UP" code="M" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
        </accelerator>
    </MenuItem>
    <MenuItem fx:id="toggleAggregation" onAction="#toggleAggregationAction" text="Toggle SNP collapsing">
        <accelerator>
            <KeyCodeCombination alt="UP" code="A" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
        </accelerator>
    </MenuItem>
    <MenuItem mnemonicParsing="false" onAction="#openConsoleAction" text="Open console">
        <accelerator>
            <KeyCodeCombination alt="UP" code="T" control="UP" meta="UP" shift="UP" shortcut="DOWN"/>
        </accelerator>
    </MenuItem>
</Menu>
