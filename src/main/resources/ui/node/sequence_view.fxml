<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<AnchorPane fx:id="sequenceViewPane" maxWidth="Infinity" prefHeight="210.0" prefWidth="850.0"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.dnacronym.hygene.ui.node.SequenceController">
    <children>
        <Canvas fx:id="sequenceCanvas" height="100.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="100.0"/>
        <GridPane hgap="10.0" layoutX="24.0" layoutY="22.0" vgap="10.0" AnchorPane.leftAnchor="10.0"
                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="100.0"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0"/>
                <ColumnConstraints hgrow="NEVER"/>
                <ColumnConstraints/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label prefWidth="100.0" text="Length"/>
                <TextField fx:id="lengthField" editable="false" GridPane.rowIndex="1">
                    <tooltip>
                        <Tooltip text="Amount of bases in the currently selected node."/>
                    </tooltip>
                </TextField>
                <Label prefWidth="100.0" text="Base offset" GridPane.columnIndex="9"/>
                <TextField fx:id="setOffset" prefWidth="50.0" GridPane.columnIndex="9" GridPane.rowIndex="1">
                    <tooltip>
                        <Tooltip text="Current base offset. Can be modified to be at most length of base minus 1."/>
                    </tooltip>
                </TextField>
                <Button fx:id="setOffsetButton" mnemonicParsing="false" onAction="#setOffsetAction" prefWidth="70.0"
                        text="Set &gt;" GridPane.columnIndex="10" GridPane.rowIndex="1">
                    <tooltip>
                        <Tooltip text="Set the base offset to the current value in the field."/>
                    </tooltip>
                </Button>
                <Separator prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.rowIndex="2"/>
                <Separator maxHeight="Infinity" orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="1"
                           GridPane.rowSpan="2"/>
                <TextArea fx:id="sequenceTextArea" editable="false" maxWidth="Infinity" prefHeight="200.0"
                          prefWidth="200.0" wrapText="true" GridPane.columnIndex="11" GridPane.rowSpan="2"/>
                <Button fx:id="getTextAreaOffsetAction" mnemonicParsing="false" onAction="#getTextAreaOffsetAction"
                        prefWidth="70.0" text="&lt; Set" GridPane.columnIndex="10">
                    <tooltip>
                        <Tooltip text="Set offset to base selected in text area."/>
                    </tooltip>
                </Button>
                <Button fx:id="goToStart" maxHeight="Infinity" mnemonicParsing="false" onAction="#goToStartAction"
                        prefWidth="50.0" text="|&lt;" GridPane.columnIndex="2" GridPane.rowSpan="2"/>
                <Button fx:id="goToEnd" maxHeight="Infinity" mnemonicParsing="false" onAction="#goToEndAction"
                        prefWidth="50.0" text="&gt;|" GridPane.columnIndex="7" GridPane.rowSpan="2"/>
                <Separator orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="8" GridPane.rowSpan="2"/>
                <Button fx:id="largeDecrement" maxHeight="Infinity" mnemonicParsing="false"
                        onAction="#decrementLargeAction" prefWidth="50.0" text="&lt;&lt;" GridPane.columnIndex="3"
                        GridPane.rowSpan="2">
                    <tooltip>
                        <Tooltip text="Go left by all bases onscreen."/>
                    </tooltip>
                </Button>
                <Button fx:id="smallDecrement" maxHeight="Infinity" mnemonicParsing="false"
                        onAction="#decrementSmallAction" prefWidth="50.0" text="&lt;" GridPane.columnIndex="4"
                        GridPane.rowSpan="2">
                    <tooltip>
                        <Tooltip text="Go left by a single base."/>
                    </tooltip>
                </Button>
                <Button fx:id="smallIncrement" maxHeight="Infinity" mnemonicParsing="false"
                        onAction="#incrementSmallAction" prefWidth="50.0" text="&gt;" GridPane.columnIndex="5"
                        GridPane.rowSpan="2">
                    <tooltip>
                        <Tooltip text="Go right by a single base."/>
                    </tooltip>
                </Button>
                <Button fx:id="largeIncrement" maxHeight="Infinity" mnemonicParsing="false"
                        onAction="#incrementLargeAction" prefWidth="50.0" text="&gt;&gt;" GridPane.columnIndex="6"
                        GridPane.rowSpan="2">
                    <tooltip>
                        <Tooltip text="Go right by all bases onscreen."/>
                    </tooltip>
                </Button>
            </children>
        </GridPane>
    </children>
</AnchorPane>
