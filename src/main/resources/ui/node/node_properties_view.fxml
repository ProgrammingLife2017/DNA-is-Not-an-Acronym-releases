<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="nodePropertiesPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dnacronym.hygene.ui.node.NodePropertiesController">
    <children>
        <TitledPane animated="false" collapsible="false" text="Node Properties" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <GridPane hgap="5.0" vgap="20.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="200.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <Label text="Clicked Node">
                            <tooltip>
                                <Tooltip text="Information of the currently selected node." />
                            </tooltip>
                        </Label>
                        <Label text="Sequence" GridPane.rowIndex="2" />
                        <Canvas fx:id="neighbourCanvas" height="100.0" width="100.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="TOP" />
                        <Label text="Neighbours" GridPane.rowIndex="3" />
                        <Label text="Position" GridPane.rowIndex="6" />
                        <TextField fx:id="position" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="6">
                            <tooltip>
                                <Tooltip text="Position of the node in the graph" />
                            </tooltip>
                        </TextField>
                        <Label text="Left neighbours" GridPane.rowIndex="4" />
                        <TextField fx:id="leftNeighbours" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="4">
                            <tooltip>
                                <Tooltip text="Amount of neighbours on the left side of the node." />
                            </tooltip>
                        </TextField>
                        <Label text="Right neighbours" GridPane.rowIndex="5" />
                        <TextField fx:id="rightNeighbours" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="5">
                            <tooltip>
                                <Tooltip text="Amount of neighbours on the right side of the node." />
                            </tooltip>
                        </TextField>
                        <Label text="Node id" GridPane.rowIndex="1" />
                        <TextField fx:id="nodeId" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <tooltip>
                                <Tooltip text="Id of the currently selected node." />
                            </tooltip>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onFocusAction" text="Focus on node" GridPane.columnIndex="1" GridPane.rowIndex="7">
                            <tooltip>
                                <Tooltip text="Focus on the selected node in the view. When zooming in you zoom in on this node." wrapText="true" />
                            </tooltip>
                        </Button>
                          <TextField fx:id="sequencePreview" alignment="BASELINE_LEFT" editable="false" promptText="preview" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
            </content>
        </TitledPane>
    </children>
</AnchorPane>
