<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" packages="org.dnacronym.hygene.ui">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <JFXAppender>
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %-3level %logger{36} - %msg%n"/>
        </JFXAppender>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="JFXAppender"/>
        </Root>
        <Root level="warn">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
